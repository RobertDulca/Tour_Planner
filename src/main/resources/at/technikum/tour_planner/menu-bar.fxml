<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>

<MenuBar xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="at.technikum.tour_planner.view.MenuBarView"
         fx:id="menuBar">

    <Menu text="File">
        <MenuItem text="Tour Report" onAction="#onReport" fx:id="reportMenuItem"/>
        <MenuItem text="Summary Report" onAction="#onSummary" fx:id="summaryMenuItem"/>
        <MenuItem text="Export Tour" onAction="#onExport" fx:id="exportMenuItem"/>
        <MenuItem text="Import Tour" onAction="#onImport"/>
    </Menu>

    <Menu text="Options"/>
    <Menu text="Help"/>
    <Menu text="Edit"/>
</MenuBar>
