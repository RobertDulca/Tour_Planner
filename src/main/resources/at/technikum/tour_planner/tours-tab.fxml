<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.tour_planner.ToursTabController">
    <Tab>
        <graphic>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label prefWidth="250.0" text="Tours" />
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="addTourButton" onAction="#onAddTour" text="+"/>
                    <Button fx:id="removeTourButton" onAction="#onRemoveTour" text="-"/>
                    <Button fx:id="editTourButton" onAction="#onEditTour" text="..."/>
                </HBox>
            </HBox>
        </graphic>
        <ListView fx:id="toursList" />
    </Tab>
</TabPane>
